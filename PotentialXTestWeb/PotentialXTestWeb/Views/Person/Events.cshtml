@model IList<Event>
@{
    ViewData["Title"] = "Events page";
}

<div class="text-center">
    <h1 class="display-4">Person events data</h1>
</div>
<div class="table-responsive-md">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Person Name</th>
                <th scope="col">Date of birth</th>
                <th scope="col">Event Name</th>
                <th scope="col">Event Description</th>
                <th scope="col">Event Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var personEvent in Model)
            {
                <tr>
                    <td>@personEvent.FirstName @personEvent.LastName</td>
                    <td>@personEvent.DateOfBirth</td>
                    <td>@personEvent.EventName</td>
                    <td>@personEvent.EventDescription</td>
                    <td>@personEvent.CreatedDateTime</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/eventHub.js"></script>